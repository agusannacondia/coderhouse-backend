<div class="jumbotron">
    <h1>Vista de Productos</h1>
    <br>

    <% if(hayProductos) { %>
        <div class="table-responsive">
            <table class="table table-dark">
                <tr> <th>Nombre</th> <th>Precio</th> <th>Foto</th></tr>
                <% productos.forEach( product => {  %>
                    <tr> <td><%=product.title%></td> <td>$<%=product.price%></td> <td><img width="50" src=<%=product.thumbnail%> alt=<%=product.title%>></td> </tr>
                <% }) %>
            </table>
        </div>
    <% }  else { %>
        <h3 class="alert alert-warning">No se encontraron productos</h3>
    <% } %>
</div>